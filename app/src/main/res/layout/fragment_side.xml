<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.SideFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="Overall Side Rating : "
                        android:textSize="17sp"
                        />
                    <RatingBar
                        android:id="@+id/side_overall_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="4.0"
                        android:stepSize="1.0"
                        android:scaleX="1.25"
                        android:scaleY="1.25"
                        android:progressTint="@color/colorPrimary"
                        android:progressBackgroundTint="@color/design_default_color_on_secondary"
                        android:secondaryProgressTint="@color/colorPrimaryDark"
                        style="@style/RatingBar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="Driver Side Rating : "
                        android:textSize="17sp"
                        />
                    <RatingBar
                        android:id="@+id/side_driver_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="4.0"
                        android:stepSize="1.0"
                        android:scaleX="1.25"
                        android:scaleY="1.25"
                        android:progressTint="@color/colorPrimary"
                        android:progressBackgroundTint="@color/design_default_color_on_secondary"
                        android:secondaryProgressTint="@color/colorPrimaryDark"
                        style="@style/RatingBar"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/text_margin"
                        android:text="Passenger Side Rating : "
                        android:textSize="17sp"
                        />
                    <RatingBar
                        android:id="@+id/side_passenger_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="4.0"
                        android:stepSize="1.0"
                        android:scaleX="1.25"
                        android:scaleY="1.25"
                        android:progressTint="@color/colorPrimary"
                        android:progressBackgroundTint="@color/design_default_color_on_secondary"
                        android:secondaryProgressTint="@color/colorPrimaryDark"
                        style="@style/RatingBar"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Video eklenecek -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:elevation="12dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="6dp"
            >

            <FrameLayout
                android:id="@+id/video_frame"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="250dp">

            </FrameLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>